+/* Theme Variables */
+:root {
+  --primary-bg: #1a1a1a;
+  --primary-text: #ffffff;
+  --accent-color: #00ff00;
+}
+
+[data-theme="dark"] {
+  --primary-bg: #1a1a1a;
+  --primary-text: #ffffff;
+  --accent-color: #00ff00;
+}
+
+[data-theme="light"] {
+  --primary-bg: #ffffff;
+  --primary-text: #1a1a1a;
+  --accent-color: #00cc00;
+}
+
+/* Base Styles */
+body {
+  margin: 0;
+  padding: 20px;
+  background-color: var(--primary-bg);
+  color: var(--primary-text);
+  font-family: Arial, sans-serif;
+  line-height: 1.6;
+  max-width: 800px;
+  margin-left: auto;
+  margin-right: auto;
+}
+
+/* Theme Toggle */
+.theme-toggle {
+  position: fixed;
+  top: 20px;
+  right: 20px;
+  padding: 10px;
+  background-color: var(--accent-color);
+  border: none;
+  color: white;
+  cursor: pointer;
+  border-radius: 5px;
+}
+
+.theme-toggle:hover {
+  opacity: 0.9;
+}
+
+/* Content Styles */
+.content {
+  width: 100%;
+  padding: 20px;
+  box-sizing: border-box;
+}
+
+h1, h2, h3 {
+  margin-top: 2rem;
+  margin-bottom: 1rem;
+}
+
+h1 {
+  font-size: 2.5em;
+  color: var(--accent-color);
+}
+
+h2 {
+  font-size: 2em;
+  border-bottom: 2px solid var(--accent-color);
+  padding-bottom: 0.5rem;
+}
+
+section {
+  margin: 2rem 0;
+  padding: 1rem;
+  border-top: 1px solid rgba(255,255,255,0.1);
+}
+
+/* Responsive Design */
+@media (max-width: 768px) {
+  body {
+    padding: 10px;
+    max-width: 100%;
+  }
+  
+  h1 {
+    font-size: 2em;
+  }
+
+  section {
+    margin: 1rem 0;
+    padding: 0.5rem;
+  }
+
+  .content {
+    width: calc(100% - 20 px);
+  }
+
+  img {
+    width: 100%;
+    max-width: 100%;
+    height: auto;
+  }
